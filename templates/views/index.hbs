          <div class="card h-100 wow slideInRight ">
            <img src={{this.urlToImage}} class="card-img " alt="">
            <div class=" text-center">
               <h3  >{{this.author}}</H3>
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text wow wow bounceInUp" data-wow-duration="2s">{{this.description}}</p>
             
              <a href="{{this.url}}" class="btn btn-primary buu w-75">READ MORE</a>
              
            </div>
            
          </div>
        </div>
